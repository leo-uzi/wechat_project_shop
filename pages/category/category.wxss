/* pages/category/category.wxss */
page {
  height: 100%;
}
page .category {
  height: 100%;
}
page .category .category_container {
  padding-top: 5rpx;
  height: calc(100vh - 95rpx);
  display: flex;
}
page .category .category_container .cate_leftmenu {
  flex: 2;
}
page .category .category_container .cate_leftmenu .gate_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .category .category_container .cate_leftmenu .active {
  color: var(--themeColor);
  border-left: 8rpx solid var(--themeColor);
}
page .category .category_container .cate_rightmenu {
  flex: 5;
}
page .category .category_container .cate_rightmenu .right_content .title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
page .category .category_container .cate_rightmenu .right_content .title .left-icon {
  margin-right: 20rpx;
}
page .category .category_container .cate_rightmenu .right_content .title .right-icon {
  margin-left: 20rpx;
}
page .category .category_container .cate_rightmenu .right_content .content {
  display: flex;
  flex-wrap: wrap;
}
page .category .category_container .cate_rightmenu .right_content .content navigator {
  width: 33.3%;
  text-align: center;
  padding: 10rpx;
}
page .category .category_container .cate_rightmenu .right_content .content navigator image {
  width: 50%;
}
page .category .category_container .cate_rightmenu .right_content .content navigator .img_name {
  font-size: 30rpx;
}
